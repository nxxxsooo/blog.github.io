{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.content.pageFolders": [
    {
      "title": "post",
      "path": "[[workspace]]/content/post"
    }
  ],
  "frontMatter.content.publicFolder": "static",
  "frontMatter.framework.id": "hugo",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.git.enabled": true,
  "frontMatter.taxonomy.fieldGroups": [
    {
      "id": "links_group",
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "website",
          "name": "website",
          "type": "string"
        },
        {
          "title": "image",
          "name": "image",
          "type": "image"
        }
      ]
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "boolean"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "links",
          "name": "links",
          "type": "block",
          "fieldGroup": [
            "links_group"
          ]
        },
        {
          "title": "menu",
          "name": "menu",
          "type": "fields",
          "fields": [
            {
              "title": "main",
              "name": "main",
              "type": "fields",
              "fields": [
                {
                  "title": "weight",
                  "name": "weight",
                  "type": "number"
                },
                {
                  "title": "params",
                  "name": "params",
                  "type": "fields",
                  "fields": [
                    {
                      "title": "icon",
                      "name": "icon",
                      "type": "string"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "title": "comments",
          "name": "comments",
          "type": "boolean"
        },
        {
          "title": "image",
          "name": "image",
          "type": "image"
        },
        {
          "title": "fmContentType",
          "name": "fmContentType",
          "type": "string"
        }
      ]
    }
  ]
}